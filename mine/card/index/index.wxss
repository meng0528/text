.tabs {
    background-color: #fff;
}

.coupon {
    font-size: 28rpx;
}

.coupon .item {
    background-color: #fff;
    border-radius: 10rpx;
    margin: 30rpx auto;
    overflow: hidden;
    position: relative;
    width: 94%;
}

.coupon .item .mask {
    position: absolute;
    right: 0rpx;
    top: 0rpx;
}

.coupon .item .mask .text {
    background-color: #f56c6c;
    color: #fff;
    font-size: 28rpx;
    padding: 15rpx;
}

.coupon .item .bottom {
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
}

.coupon .item .top {
    align-items: center;
    display: flex;
    flex-direction: row;
    justify-content: center;
}

.coupon .item .top .head {
    color: #fff;
    padding: 50rpx;
    text-align: center;
    width: 20%;
}

.coupon .item .top .head .number {
    font-size: 48rpx;
    font-weight: bolder;
}

.coupon .item .top .head text {
    font-size: 28rpx;
    font-weight: 400;
}

.coupon .item .top .content {
    font-size: 28rpx;
    padding: 0rpx 15rpx;
    width: 70%;
}

.coupon .item .top .content .title {
    font-size: 32rpx;
    font-weight: bolder;
}

.coupon .item .top .content .tips {
    color: #7a7a7a;
    margin: 15rpx 0rpx;
}

.coupon .item .top .content .line {
    align-items: center;
    border-top: 2rpx dashed #f4f4f4;
    color: #7a7a7a;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}