page {
    background: #fff;
    font-size: 32rpx;
}

.container {
    padding: 0 60rpx;
}

.wechatapp {
    border-bottom: 1rpx solid #e3e3e3;
    margin-bottom: 72rpx;
    padding: 80rpx 0 48rpx;
    text-align: center;
}

.wechatapp .header {
    border: 2px solid #fff;
    border-radius: 50%;
    box-shadow: 1px 0 5px rgba(50,50,50,.3);
    height: 190rpx;
    margin: 0rpx auto 0;
    overflow: hidden;
    width: 190rpx;
}

.auth-title {
    color: #585858;
    font-size: 34rpx;
    margin-bottom: 40rpx;
}

.auth-subtitle {
    color: #888;
    font-size: 28rpx;
    margin-bottom: 88rpx;
}

.login-btn {
    padding: 0 20rpx;
}

.login-btn button {
    border-radius: 999rpx;
    color: #fff;
    font-size: 30rpx;
    height: 88rpx;
    line-height: 88rpx;
    text-align: center;
}

.no-login-btn {
    margin-top: 20rpx;
    padding: 0 20rpx;
}

.no-login-btn button {
    background: #dfdfdf;
    border-radius: 999rpx;
    color: #fff;
    font-size: 30rpx;
    height: 88rpx;
    line-height: 88rpx;
    text-align: center;
}