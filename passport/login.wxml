<view class="container">
    <u-toast bind:__l="__l" class="vue-ref" data-ref="uToast" vueId="b891707e-1"></u-toast>
    <view class="wechatapp">
        <view class="header">
            <open-data type="userAvatarUrl"></open-data>
        </view>
    </view>
    <view class="auth-title">申请获取以下权限</view>
    <view class="auth-subtitle">获得你的公开信息（昵称、头像等）</view>
    <view class="login-btn">
        <button bindtap="__e" class="btn-normal" data-event-opts="{{[ [ 'tap',[ [ 'doLogin',['$event'] ] ] ] ]}}" style="{{'background-color: '+setting.store.sys_theme}}" wx:if="{{!is_login}}">授权登录</button>
    </view>
    <view class="no-login-btn">
        <button bindtap="__e" class="btn-normal" data-event-opts="{{[ [ 'tap',[ [ 'onNotLogin',['$event'] ] ] ] ]}}">暂不登录</button>
    </view>
</view>
